{
  "name": "@dojo/core",
  "version": "0.3.1-pre",
  "description": "Basic utilites for common TypeScript development",
  "engines": {
    "npm": ">=3.0.0"
  },
  "homepage": "https://dojo.io",
  "bugs": {
    "url": "https://github.com/dojo/core/issues"
  },
  "license": "BSD-3-Clause",
  "private": true,
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/core.git"
  },
  "scripts": {
    "build:umd": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:static": "sync-glob --no-d \"{src,tests}/**/*\" \"!{src,tests}/**/*.ts\" \"{src,tests}/**/*.d.ts\" dist/testing",
    "build": "concurrently \"npm run build:umd\" \"npm run build:esm\" \"npm run build:static\"",
    "lint": "tslint -p tsconfig.json",
    "package": "dojo-scripts-package",
    "prepublish": "dojo-scripts-install-peer-deps",
    "test": "intern",
    "test:local": "intern -- config=@local",
    "test:browserstack": "intern -- config=@browserstack",
    "watch:umd": "tsc -w",
    "watch:esm": "tsc -p tsconfig.esm.json -w",
    "watch:static": "npm run build:static -- -w",
    "watch": "concurrently \"npm run watch:umd\" \"npm run watch:esm\" \"npm run watch:static\""
  },
  "peerDependencies": {
    "@dojo/has": "~0.1.1",
    "@dojo/shim": "~0.2.3"
  },
  "devDependencies": {
    "@dojo/interfaces": "~0.2.0",
    "@dojo/loader": "~0.1.1",
    "@dojo/scripts": "./tarballs/dojo-scripts-0.1.0-pre.tgz",
    "@types/express": "~4.0.39",
    "@types/glob": "~5.0.0",
    "@types/multer": "~1.3.3",
    "@types/node": "^6.0.0",
    "@types/sinon": "~1.16.0",
    "concurrently": "~3.5.1",
    "express": "~4.15.3",
    "intern": "~4.1.0",
    "multer": "~1.3.0",
    "sinon": "~1.17.6",
    "sync-glob": "~1.3.7",
    "tslib": "~1.8.0",
    "tslint": "^4.5.1",
    "typescript": "~2.6.1"
  }
}
